generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------- Admin Table --------------- //
model Admin {
  id       String  @id @default(uuid())
  login    String  @unique
  password String
  Token    Token[]

  @@map("admins")
}

// --------------- Token Table --------------- //
model Token {
  token   String   @unique
  exp     DateTime
  admin   Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId String   @map("admin-id")

  @@map("tokens")
}
